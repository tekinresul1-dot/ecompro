# Production Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# REQUIRED - Must be set before deployment
# ===========================================

# Django Secret Key (generate a new one!)
# python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=

# Encryption Key for API credentials
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# CORS Origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# Database Configuration
# ===========================================
DB_NAME=trendyol_profitability
DB_USER=postgres
DB_PASSWORD=your-strong-password-here
DB_HOST=db
DB_PORT=5432

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://:your-redis-password@redis:6379/0
REDIS_PASSWORD=your-redis-password

# Celery
CELERY_BROKER_URL=redis://:your-redis-password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your-redis-password@redis:6379/0

# ===========================================
# Frontend Configuration
# ===========================================
NEXT_PUBLIC_API_URL=https://yourdomain.com/api/v1

# ===========================================
# Email Configuration (Optional)
# ===========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# Trendyol API (Default settings)
# ===========================================
TRENDYOL_API_BASE_URL=https://api.trendyol.com/sapigw
TRENDYOL_RATE_LIMIT_PER_SECOND=5

# ===========================================
# Application Settings
# ===========================================
DEFAULT_VAT_RATE=20.00
DEFAULT_COMMISSION_VAT_RATE=20.00
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=15
JWT_REFRESH_TOKEN_LIFETIME_DAYS=1
