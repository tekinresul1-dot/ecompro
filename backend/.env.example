# Environment Configuration for Trendyol Profitability SaaS
# Copy this file to .env and fill in the values

# Django Settings
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
DATABASE_URL=postgres://user:password@localhost:5432/trendyol_profitability
DB_NAME=trendyol_profitability
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Encryption Key (for API credentials - must be 32 bytes base64 encoded)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-encryption-key-here

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Trendyol API (Default rate limits)
TRENDYOL_API_BASE_URL=https://api.trendyol.com/sapigw
TRENDYOL_RATE_LIMIT_PER_SECOND=5

# Default VAT Rate (Turkey)
DEFAULT_VAT_RATE=20.00
DEFAULT_COMMISSION_VAT_RATE=20.00
